{
    "name": "vankazaov/demo-php-http-framework",
    "description": "Source code for our workshop",
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "deworker.pro"
        }
    ],
    "config": {
      "sort-packages": true
